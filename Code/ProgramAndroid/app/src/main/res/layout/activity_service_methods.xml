<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.Service.ServiceMethods">

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnStartService"
        android:text="启动服务" />

    <Button
        android:id="@+id/btn_start_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnStartBindService"
        android:text="绑定服务" />
    <Button
        android:id="@+id/btn_stop_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnSopBindService"
        android:text="停止绑定服务" />
    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnStopService"
        android:text="停止服务" />
    <Button
        android:id="@+id/btn_forceground_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnStartForcegroundService"
        android:text="前台服务" />
    <Button
        android:id="@+id/btn_background_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="BtnBackgroundService"
        android:text="后台服务" />
</LinearLayout>
