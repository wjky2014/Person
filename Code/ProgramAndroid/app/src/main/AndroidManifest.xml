<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.program.programandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".component.Activity.ActivityMethods" />
        <activity android:name=".component.Activity.OtherActivity" />
        <activity android:name=".component.Service.ServiceMethods" />

        <service
            android:name=".component.Service.BindServiceMethods"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".component.Service.StartServiceMethods"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".component.Service.MyStartForcegroundService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>